<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="text-center">Create student</h3>
  </div>
  <div class="panel-body">
    <%= form_for :user, :url => {action: :create}, :html => {:class => 'form-horizontal'} do |f| %>
        <input type="hidden" name="user_type" value="student">
        <div class="form-group">
          <label class="col-sm-2 control-label" for="user-matricnum">Matriculation Number:</label>
          <div class="col-sm-10">
            <input class="form-control" type="text" placeholder="Input matriculation Number" name="user_matricnum" id="user-matricnum">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="user-username">Username:</label>
          <div class="col-sm-10">
            <%= f.text_field :user_name, class: 'form-control', placeholder: 'Input username', id: 'user-username' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="user-useremail">User email:</label>
          <div class="col-sm-10">
            <%= f.email_field :email, class: 'form-control', placeholder: 'Input user email', id: 'user-useremail' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit 'Create student', class: 'btn btn-success' %>
          </div>
        </div>
    <% end %>
  </div>
</div>
