<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="text-center">mentors</h3>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
      <tr><th>User Name</th><th>User Email</th><th>Actions</th></tr>
      </thead>
      <tbody>
      <% @mentors.each do |mentor| %>
          <tr>
            <td><%= mentor.user.user_name %></td>
            <td><%= mentor.user.email %></td>
            <td>
              <a class="btn btn-default btn-xs" href="<%=  mentor_path(mentor.id) %>">View</a>
              <a class="btn btn-default btn-xs" href="<%= edit_mentor_path(mentor.id) %>">Edit</a>
              <%= link_to 'Delete', mentor_path(mentor.id),
                          :confirm => 'Are you sure to delete this mentor permanently?', :method => :delete, :class => 'btn btn-danger btn-xs' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
