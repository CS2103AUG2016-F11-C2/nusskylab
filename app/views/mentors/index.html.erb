<% content_for :main_content do %>
    <% javascript 'mentors.js' %>
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="text-center">All Mentors</h3>
      </div>
      <div class="panel-body">
        <%= render 'mentors_table', locals: {mentors: @mentors} %>
        <hr>
        <div class="col-sm-2 col-sm-offset-5">
          <a href="<%= new_mentor_path %>" class="btn btn-success">Create New Mentor</a>
        </div>
        <br><br><hr>
        <div class="col-sm-12">
          <% all_cohorts.each do |cohort| %>
          <div class="col-sm-2">
            <%= link_to cohort, mentors_path(cohort: cohort), class: 'btn btn-info' %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
<% end %>
