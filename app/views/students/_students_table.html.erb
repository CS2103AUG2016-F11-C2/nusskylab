<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="text-center">Students</h3>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
      <tr><th>User Name</th><th>User Email</th><th>Team Name</th><th>Project Title</th><th>Actions</th></tr>
      </thead>
      <tbody>
      <% @students.each do |student| %>
          <tr>
            <td><%= student.user.user_name %></td>
            <td><%= student.user.email %></td>
            <td><%= student.team.team_name %></td>
            <td><%= student.team.project_title %></td>
            <td><a class="btn btn-default btn-xs" href="<%= edit_student_path(student.id) %>">Edit</a></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
