<% content_for :students_content do %>
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="text-center">All Students</h3>
      </div>
      <div class="panel-body">
        <%= render 'students_table', locals: {students: @students} %>
        <hr>
        <div class="col-sm-2 col-sm-offset-4">
          <a href="<%= new_student_path %>" class="btn btn-success">Create New Student</a>
        </div>
        <div class="col-sm-2">
          <a href="<%= batch_upload_students_path %>" class="btn btn-success">Batch Create Students</a>
        </div>
      </div>
    </div>
<% end %>
