<%= simple_form_for locals[:student],
                    url: {action: (locals[:is_new] ? 'create' : 'update')},
                    html: {class: 'form-horizontal'} do |f| %>
  <%= render 'shared/error_messages', locals: {target_model: locals[:student]} %>
  <div class="form-group">
    <label class="col-sm-2 control-label">Team:</label>
    <div class="col-sm-10">
      <%= f.select :team_id, locals[:teams].map {|team| [team.team_name, team.id]},
                   {}, {class: 'form-control'} %>
      <div class="help-block with-errors">Select a team</div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Submit', class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
