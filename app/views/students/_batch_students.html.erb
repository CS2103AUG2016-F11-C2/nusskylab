<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="text-center">Create students</h3>
  </div>
  <div class="panel-body">
    <%= form_for @student, :url => {action: 'create'}, :html => {:class => 'form-horizontal'} do |f| %>
        <input type="hidden" name="batch_creation" value="batch_creation">
        <div class="form-group">
          <label class="col-sm-2 control-label" for="batch-csv">CSV content:</label>
          <div class="col-sm-10">
            <textarea class="form-control" type="text" placeholder="Input csv file content"
                   name="batch_csv" id="batch-csv"
                   required="required" rows="7"><%= locals[:batch_csv] %></textarea>
            <div class="help-block with-errors">Please provide a valid CSV file content</div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit 'Submit', class: 'btn btn-success' %>
          </div>
        </div>
    <% end %>
  </div>
</div>
