<% locals[:milestones].each do |milestone| %>
    <h3 class="text-center"><%= milestone.name %></h3>
    <% if locals[:student].team %>
        <a href="<%= milestone_team_received_evals_path(milestone.id, locals[:student].team.id) %>"
           class="btn btn-xs btn-info">
          View evaluations
        </a>
    <% end %>
    <div class="table-responsive">
      <table class="table">
        <col width="33%">
        <col width="33%">
        <col width="33%">
        <thead>
        <tr><th>Team Name</th><th>Status</th><th>Last updated</th></tr>
        </thead>
        <tbody>
        <% locals[:evaluators].each do |evaluator| %>
            <% if (temp_evaluator_evaluation = locals[:team_evaluators_evaluations][milestone.id][evaluator.evaluator_id]) %>
                <tr>
                  <td><%= evaluator.evaluator.team_name %></td>
                  <td>
                    <a href="<%= team_peer_evaluation_path(evaluator.evaluator_id, temp_evaluator_evaluation.id) %>"
                       class="btn btn-success">
                      View
                    </a>
                  </td>
                  <td>
                    <%= temp_evaluator_evaluation.updated_at.strftime('%Y-%m-%d %I:%M %p') %>
                  </td>
                </tr>
            <% else %>
                <tr>
                  <td>
                    <span data-toggle="tooltip" data-placement="top"
                          title="The team has not submitted peer evaluation yet">
                      <%= evaluator.evaluator.team_name %>
                    </span>
                  </td>
                  <td>
                    <a href="#" disabled="disabled"
                       class="btn btn-default">
                      View
                    </a>
                  </td>
                  <td>
                    Not submitted yet
                  </td>
                </tr>
            <% end %>
        <% end %>
        </tbody>
      </table>
    </div>
<% end %>
