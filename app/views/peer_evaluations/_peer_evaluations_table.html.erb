<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="text-center">Peer evaluations</h3>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
      <tr><th>Team name</th><th>Target team name</th><th>Target milestone name</th><th>Actions</th></tr>
      </thead>
      <tbody>
      <% locals[:peer_evaluations].each do |peer_evaluation| %>
          <tr>
            <td><%= peer_evaluation.team.team_name %></td>
            <td><%= peer_evaluation.submission.team.team_name %></td>
            <td><%= peer_evaluation.submission.milestone.name %></td>
            <td></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
