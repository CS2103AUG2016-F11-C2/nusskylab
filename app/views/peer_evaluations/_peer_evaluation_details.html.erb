<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="text-center">View peer evaluation</h3>
  </div>
  <div class="panel-body">
    <%= simple_form_for locals[:peer_evaluation], :url => '#' do |f| %>
        <div class="form-group">
          <label class="control-label" for="peer-evaluation-public-content">Public content:</label>
          <%= f.text_area :public_content, class: 'form-control', readonly: 'readonly',
                          placeholder: 'Input evaluation public content',
                          id: 'peer-evaluation-public-content', rows: '10',
                          value: locals[:is_new] ? '' : locals[:peer_evaluation].public_content %>
        </div>
        <% if (student? and student?.team and student?.team_id == locals[:peer_evaluation].team_id) %>
            <div class="form-group">
              <label class="control-label" for="peer-evaluation-private-content">Private content:</label>
              <%= f.text_area :private_content, class: 'form-control', readonly: 'readonly',
                              placeholder: 'Input evaluation private content',
                              id: 'peer-evaluation-private-content', rows: '10',
                              value: locals[:is_new] ? '' : locals[:peer_evaluation].private_content %>
            </div>
            <div class="form-group">
              <label class="control-label" for="target-submission-id">Submission:</label>
                <%= f.text_field :submission_id, class: 'form-control', readonly: 'readonly',
                                 value: (locals[:peer_evaluation].submission.milestone.name + ' @ ' +
                                         locals[:peer_evaluation].submission.team.team_name) %>
            </div>
        <% end %>
    <% end %>
  </div>
</div>
