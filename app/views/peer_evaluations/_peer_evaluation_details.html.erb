<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="text-center">View peer evaluation</h3>
  </div>
  <div class="panel-body">
    <%= form_for locals[:peer_evaluation], :url => {action: 'update'},
                 :html => {:class => 'form-horizontal'} do |f| %>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="peer-evaluation-public-content">Public content:</label>
          <div class="col-sm-10">
            <textarea class="form-control" placeholder="Input evaluation public content"
                      name="public_content" id="peer-evaluation-public-content" disabled="disabled"
                      rows="7"><%= locals[:is_new] ? '' : locals[:peer_evaluation].public_content %></textarea>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="peer-evaluation-private-content">Private content:</label>
          <div class="col-sm-10">
            <textarea class="form-control" placeholder="Input evaluation private content"
                      name="private_content" id="peer-evaluation-private-content" disabled="disabled"
                      rows="7"><%= locals[:is_new] ? '' : locals[:peer_evaluation].private_content %></textarea>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="target-submission-id">Submission:</label>
          <div class="col-sm-10">
            <select class="form-control" name="submission_id" id="target-submission-id" disabled="disabled">
              <% locals[:team].evaluateds.each do |evaluated| %>
                  <% evaluated.evaluated.submissions.each do |submission| %>
                      <option value="<%= submission.id %>"
                              <%= (not locals[:is_new]) && locals[:peer_evaluation].submission_id == submission.id ? 'selected' : '' %>>
                        <%= submission.team.team_name + '@' + submission.milestone.name %></option>
                  <% end %>
              <% end %>
            </select>
          </div>
        </div>
        <div class="form-group" style="display: none;">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit 'Submit', class: 'btn btn-success' %>
          </div>
        </div>
    <% end %>
  </div>
</div>
