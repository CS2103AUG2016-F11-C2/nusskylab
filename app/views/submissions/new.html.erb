<% content_for :main_content do %>
    <% javascript 'submissions.js' %>
    <%= tinymce_assets %>
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="text-center">Create submission</h3>
      </div>
      <div class="panel-body">
        <p class="alert alert-info">You can view all you previous submissions
          <a href="<%= team_submissions_path(team_id) %>" class="btn btn-success btn-xs">here</a></p>
        <%= render 'submission_form', locals: {submission: @submission,
                                               milestones: milestones,
                                               is_new: true} %>
      </div>
    </div>
    <%= render 'tinymce_config' %>
<% end %>
