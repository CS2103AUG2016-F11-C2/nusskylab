<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="text-center">View submission of team <%= locals[:submission].team.team_name %></h3>
  </div>
  <div class="panel-body">
    <%= form_for locals[:submission],
                 :url => {action: 'create'} do |f| %>
        <div class="form-group">
          <label class="col-sm-2 control-label">Project Readme:</label>
          <pre class="col-sm-12">
            <%= locals[:submission].read_me.html_safe %>
          </pre>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">Project Log:</label>
          <pre class="col-sm-12">
            <%= locals[:submission].project_log.html_safe %>
          </pre>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="submission_video_link">Video Link:</label>
          <%= f.url_field :video_link, class: 'form-control',
                          placeholder: 'Input project video link',
                          required: true, readonly: 'readonly' %>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="submission_milestone_id">Milestone:</label>
          <%= f.text_field :milestone_id, value: locals[:submission].team.team_name +
                                                 ' @ ' + locals[:submission].milestone.name,
                            class: 'form-control', readonly: 'readonly' %>
        </div>
    <% end %>
  </div>
</div>
