<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="text-center"><%= locals[:is_new] ? 'Create' : 'Edit' %> submission of team <%= locals[:submission].team.team_name %></h3>
  </div>
  <div class="panel-body">
    <%= form_for locals[:submission], :url => {action: (locals[:is_new] ? 'create' : 'update')},
                 :html => {:class => 'form-horizontal'} do |f| %>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="submission-content">Content:</label>
          <div class="col-sm-10">
            <textarea class="form-control" placeholder="Input submission content"
                   name="content" id="submission-content" <%= locals[:is_new] ? '' : 'value="' + locals[:submission].content + '"' %> rows="7">
            </textarea>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="user-project-level">Project Level:</label>
          <div class="col-sm-10">
            <select class="form-control" name="milestone_id" id="user-project-level">
              <% locals[:milestones].each do |milestone| %>
                  <option value="<%= milestone.id %>"
                          <%= (not locals[:is_new]) && locals[:submission].milestone_id == milestone.id ? 'selected' : '' %>>
                    <%= milestone.name %></option>
              <% end %>
            </select>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit 'Submit', class: 'btn btn-success' %>
          </div>
        </div>
    <% end %>
  </div>
</div>
