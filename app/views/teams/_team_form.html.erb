<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="text-center"><%= locals[:is_new] ? 'Create' : 'Edit' %> team</h3>
  </div>
  <div class="panel-body">
    <%= form_for @team, :url => {action: (locals[:is_new] ? 'create' : 'update')}, :html => {:class => 'form-horizontal'} do |f| %>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="team-name">Team name:</label>
          <div class="col-sm-10">
            <input class="form-control" placeholder="Input team name"
                   name="team_name" id="team-name" value="<%= locals[:is_new] ? '' : @team.team_name %>">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="team-project-title">Team project title:</label>
          <div class="col-sm-10">
            <input class="form-control" type="text" placeholder="Input team name"
                   name="project_title" id="team-project-title" value="<%= locals[:is_new] ? '' : @team.project_title %>">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="team-project-level">Team Project Level:</label>
          <div class="col-sm-10">
            <select class="form-control" name="project_level" id="team-project-level">
              <option value="Vostok" <%= (not locals[:is_new]) && @team.project_level == 'Vostok' ? 'selected' : '' %>>Vostok</option>
              <option value="Gemini" <%= (not locals[:is_new]) && @team.project_level == 'Gemini' ? 'selected' : '' %>>Project Gemini</option>
              <option value="Apollo 11" <%= (not locals[:is_new]) && @team.project_level == 'Apollo 11' ? 'selected' : '' %>>Apollo 11</option>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="team-adviser-id">Team's Adviser:</label>
          <div class="col-sm-10">
            <select class="form-control" name="adviser_id" id="team-adviser-id">
              <% locals[:advisers].each do |adviser| %>
                  <option value="<%= adviser.id %>"
                          <%= (not locals[:is_new]) && @team.adviser_id == adviser.id ? 'selected' : '' %>>
                    <%= adviser.user.user_name %></option>
              <% end %>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="team-mentor-id">Team's Mentor:</label>
          <div class="col-sm-10">
            <select class="form-control" name="mentor_id" id="team-mentor-id">
              <% locals[:mentors].each do |mentor| %>
                  <option value="<%= mentor.id %>"
                          <%= (not locals[:is_new]) && @team.mentor_id == mentor.id ? 'selected' : '' %>>
                    <%= mentor.user.user_name %></option>
              <% end %>
            </select>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit 'Submit', class: 'btn btn-success' %>
          </div>
        </div>
    <% end %>
  </div>
</div>
