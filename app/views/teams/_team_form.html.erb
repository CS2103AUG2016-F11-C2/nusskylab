<%= simple_form_for locals[:team], :url => {action: (locals[:is_new] ? 'create' : 'update')},
                    :html => {:class => 'form-horizontal'} do |f| %>
    <%= render 'shared/error_messages', locals: {target_model: locals[:team]} %>
    <div class="form-group">
      <label class="col-sm-2 control-label">Team name:</label>
      <div class="col-sm-10">
        <%= f.text_field :team_name, class: 'form-control',
                         placeholder: 'Provide a team name',
                         required: true %>
        <div class="help-block with-errors">Provide a team name</div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Project level:</label>
      <div class="col-sm-10">
        <%= f.select :project_level, {Vostok: 'Vostok',
                                      'Project Gemini'.to_sym => 'Gemini',
                                      'Apollo 11'.to_sym => 'Apollo 11'}, {},
                     {class: 'form-control'} %>
        <div class="help-block with-errors">Select a project level</div>
      </div>
    </div>
    <% if admin? %>
        <div class="form-group">
          <label class="col-sm-2 control-label">Adviser ID:</label>
          <div class="col-sm-10">
            <%= f.select :adviser_id, locals[:advisers].map {|adviser| [adviser.user.user_name, adviser.id]},
                         {include_blank: 'Select an adviser'}, {class: 'form-control'} %>
            <div class="help-block with-errors">Select an adiver</div>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">Mentor ID:</label>
          <div class="col-sm-10">
            <%= f.select :mentor_id, locals[:mentors].map {|mentor| [mentor.user.user_name, mentor.id]},
                         {include_blank: 'Select a mentor'}, {class: 'form-control'} %>
            <div class="help-block with-errors">Select a user ID</div>
          </div>
        </div>
    <% end %>
    <div class="form-group">
      <div class="checkbox">
        <label class="col-sm-offset-2"><%= f.check_box :has_dropped %> Has Dropped</label>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Submit', class: 'btn btn-success' %>
      </div>
    </div>
<% end %>
