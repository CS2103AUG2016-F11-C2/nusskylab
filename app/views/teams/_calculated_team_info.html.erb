<table class="table table-hover">
  <thead>
  <tr><th>Milestone name</th><th>Peer evaluation average ratings</th><th>Actions</th></tr>
  </thead>
  <tbody>
  <% locals[:milestones].each do |milestone| %>
      <tr>
        <td><%= milestone.name %></td>
        <td><%= locals[:ratings_hash][milestone.id].nil? ?
                        'Not available' : locals[:ratings_hash][milestone.id] %></td>
        <td><a href="<%= milestone_team_received_evals_path(milestone.id, locals[:team].id) %>"
               class="btn btn-success">View received evaluations</a></td>
      </tr>
  <% end %>
  </tbody>
</table>
