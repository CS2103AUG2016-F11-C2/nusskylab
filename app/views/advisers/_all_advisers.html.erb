<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="text-center">All advisers</h3>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr><th>User Name</th><th>User Email</th><th>Actions</th></tr>
      </thead>
      <tbody>
      <% @advisers.each do |adviser| %>
          <tr>
            <td><%= adviser.user.user_name %></td>
            <td><%= adviser.user.email %></td>
            <td>
              <a class="btn btn-default btn-xs" href="<%=  adviser_path(adviser.id) %>">View</a>
              <a class="btn btn-default btn-xs" href="<%= edit_adviser_path(adviser.id) %>">Edit</a>
              <%= link_to 'Delete', adviser_path(adviser.id),
                          :confirm => 'Are you sure to delete this adviser permanently?', :method => :delete, :class => 'btn btn-danger btn-xs' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <hr>
    <div class="col-sm-7 col-sm-offset-5">
      <a href="<%= new_adviser_path %>" class="btn btn-success">Create New Adviser</a>
    </div>
  </div>
</div>
