<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="text-center">View adviser</h3>
  </div>
  <div class="panel-body">
    <%= form_for @adviser, :url => {action: 'create'}, :html => {:class => 'form-horizontal'} do |f| %>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="user-nus-id">NUS ID:</label>
          <div class="col-sm-10">
            <input class="form-control" type="text" placeholder="Input user's NUS ID"
                   name="nus_id" id="user-nus-id" value="<%= @adviser.user.uid[26..-1] %>" disabled="disabled">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="user-username">Username:</label>
          <div class="col-sm-10">
            <input class="form-control" type="text" placeholder="Input user name"
                   name="user_name" id="user-username" value="<%= @adviser.user.user_name %>" disabled="disabled">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="user-user-email">User email:</label>
          <div class="col-sm-10">
            <input class="form-control" placeholder="Input user email"
                   name="user_email" id="user-user-email" value="<%= @adviser.user.email %>"
                   disabled="disabled">
          </div>
        </div>
        <% @adviser.teams.each do |team| %>
            <div class="form-group">
              <label class="col-sm-2 control-label">Team:</label>
              <div class="col-sm-10">
                <input class="form-control" placeholder="Input team name" value="<%= team.team_name %>"
                       disabled="disabled">
              </div>
            </div>
        <% end %>
        <div class="form-group" style="display: none;">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit 'Submit', class: 'btn btn-success' %>
          </div>
        </div>
    <% end %>
  </div>
</div>
