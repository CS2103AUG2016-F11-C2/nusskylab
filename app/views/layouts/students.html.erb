<%= content_for :content do %>
    <nav class="navbar navbar-default" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#nav-menu">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="collapse navbar-collapse" id="nav-menu">
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
            <% if current_user and student? and student?.team_id %>
                <li><a href="<%= team_path(student?.team_id) %>"></a></li>
            <% end %>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
                <li><p class="navbar-text user-name-text"> Welcome, <%= current_user.user_name %></p></li>
                <li>
                  <div class="dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button"
                            id="settings-dropdown" data-toggle="dropdown" aria-expanded="true">
                      <span class="glyphicon glyphicon-cog"></span><span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="settings-dropdown">
                      <li><a href="<%= edit_user_path(current_user.id) %>">Edit User Settings</a></li>
                      <% if student? %>
                          <li><a href="<%= edit_student_path(student?.id) %>">Edit Student Settings</a></li>
                      <% end %>
                    </ul>
                  </div>
                </li>
                <li><a href="/logout" class="btn btn-default btn-sm navbar-btn"><b>Logout</b></a></li>
            <% else %>
                <li><a href="/login" class="btn btn-default btn-sm navbar-btn">Login</a></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container" id="main-content">
      <%= render 'shared/flash_messages' %>
      <%= content_for?(:students_content) ? yield(:students_content) : yield %>
    </div>
<% end %>
<%= render template: 'layouts/application' %>

